<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?"} do %>
<i class="fa fa-trash" aria-hidden="true"></i>
<% end %>
<%= link_to edit_article_path(@article) do %>
<i class="fa fa-pencil" aria-hidden="true"></i>
<% end %>
